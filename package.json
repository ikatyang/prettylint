{
  "name": "prettylint",
  "type": "module",
  "version": "2.0.0",
  "description": "Run Prettier as a linter",
  "keywords": [
    "linter",
    "prettier"
  ],
  "bin": "bin/cli.js",
  "repository": "https://github.com/ikatyang/prettylint",
  "homepage": "https://github.com/ikatyang/prettylint#readme",
  "author": {
    "name": "Ika",
    "email": "ikatyang@gmail.com",
    "url": "https://github.com/ikatyang"
  },
  "license": "MIT",
  "scripts": {
    "prepack": "pnpm run build",
    "lint": "prettier --check .",
    "test": "vitest --no-threads",
    "build": "tsc -p ./tsconfig.build.json",
    "release": "standard-version"
  },
  "dependencies": {
    "eslint-formatter-pretty": "^5.0.0",
    "fast-glob": "^3.3.1",
    "ignore": "^5.2.4",
    "lines-and-columns": "^2.0.3",
    "meow": "^12.0.1",
    "prettier-linter-helpers": "^1.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "11.0.1",
    "@types/prettier-linter-helpers": "1.0.1",
    "@vitest/coverage-v8": "0.33.0",
    "fs-extra": "11.1.1",
    "jest-snapshot-serializer-ansi": "2.1.0",
    "prettier": "3.0.0",
    "standard-version": "9.5.0",
    "typescript": "5.1.6",
    "vite": "4.4.12",
    "vitest": "0.33.0"
  },
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "/bin/**/*",
    "/lib/**/*",
    "/CHANGELOG.md",
    "/ThirdPartyNoticeText.txt"
  ],
  "packageManager": "pnpm@8.6.6",
  "pnpm": {
    "patchedDependencies": {
      "lines-and-columns@2.0.3": "patches/lines-and-columns@2.0.3.patch"
    }
  }
}
