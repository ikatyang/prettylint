{
  "name": "prettylint",
  "version": "1.0.0",
  "description": "Run Prettier as a linter",
  "keywords": [
    "linter",
    "prettier"
  ],
  "bin": "bin/cli.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/prettylint",
  "homepage": "https://github.com/ikatyang/prettylint#readme",
  "author": {
    "name": "Ika",
    "email": "ikatyang@gmail.com",
    "url": "https://github.com/ikatyang"
  },
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run build",
    "lint": "tslint -p ./tsconfig.json --type-check",
    "test": "jest",
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.build.json",
    "docs": "md-magic --path README.md",
    "release": "standard-version"
  },
  "dependencies": {
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-prettier": "^2.2.0",
    "globby": "^6.1.0",
    "ignore": "^3.3.5",
    "lines-and-columns": "^1.1.6",
    "meow": "^3.7.0",
    "tslib": "^1.8.0"
  },
  "devDependencies": {
    "@types/eslint-plugin-prettier": "2.2.0",
    "@types/globby": "6.1.0",
    "@types/jest": "21.1.10",
    "@types/meow": "3.6.2",
    "@types/node": "9.6.6",
    "@types/prettier": "1.9.0",
    "@types/strip-ansi": "3.0.0",
    "dedent": "0.7.0",
    "jest": "21.2.1",
    "markdown-magic": "0.1.21",
    "prettier": "1.9.2",
    "prettier-config-ikatyang": "1.1.1",
    "standard-version": "4.3.0",
    "strip-ansi": "4.0.0",
    "ts-jest": "21.2.4",
    "tslint": "5.9.1",
    "tslint-config-ikatyang": "2.5.1",
    "tslint-config-prettier": "1.12.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.8.3"
  },
  "peerDependencies": {
    "prettier": "^1.6.0"
  },
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "/bin/**/*",
    "/lib/**/*"
  ]
}
